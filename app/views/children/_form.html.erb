<%= simple_form_for(@child) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :age %>
    <%= f.input :number_of_guardians %>
    <%= f.input :grade %>
    <%= f.input :class_number %>
    <%= f.input :school_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
