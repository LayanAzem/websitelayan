<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :name %>
 	  <%= f.select :role_id, options_for_select(Role.all.map{|r|[r.name,r.id]})%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>