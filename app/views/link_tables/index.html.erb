<p id="notice"><%= notice %></p>

<h1>Listing Link Tables</h1>

<table>
  <thead>
    <tr>
      <th>Role</th>
      <th>Name</th>
      <th>Idea</th>
      <th>User</th>
      <th>Platform</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @link_tables.each do |link_table| %>
      <tr>
        <td><%= link_table.role_id %></td>
        <td><%= link_table.name %></td>
        <td><%= link_table.idea_id %></td>
        <td><%= link_table.user_id %></td>
        <td><%= link_table.platform_id %></td>
        <td><%= link_to 'Show', link_table %></td>
        <td><%= link_to 'Edit', edit_link_table_path(link_table) %></td>
        <td><%= link_to 'Destroy', link_table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

