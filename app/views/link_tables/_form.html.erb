<%= simple_form_for(@link_table) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :role_id %>
    <%= f.input :name %>
    <%= f.input :idea_id %>
    <%= f.input :user_id %>
    <%= f.input :platform_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
